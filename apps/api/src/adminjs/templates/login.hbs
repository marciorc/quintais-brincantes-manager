<div class="quintais-login-container">
  <div class="quintais-login-box">
    <!-- Logo -->
    <img src="{{assetsMap.logo}}" alt="Quintais Brincantes Manager" class="quintais-logo">

    <!-- Título e Mensagem -->
    <h1 class="quintais-welcome">Bem-vindo ao Quintais Brincantes Manager</h1>
    <p class="quintais-subtitle">Sistema de Gestão Pedagógica</p>

    <!-- Formulário (username/password) -->
    <form action="{{formAction}}" method="POST" class="quintais-form">
      {{#if errorMessage}}
        <div class="quintais-error">{{errorMessage}}</div>
      {{/if}}

      <div class="quintais-form-group">
        <label for="username" class="quintais-label">Username</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          class="quintais-input" 
          placeholder="Digite seu username"
          required
        >
      </div>

      <div class="quintais-form-group">
        <label for="password" class="quintais-label">Senha</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="quintais-input" 
          placeholder="Digite sua senha"
          required
        >
      </div>

      <button type="submit" class="quintais-button">Acessar Sistema</button>
    </form>
  </div>
</div>