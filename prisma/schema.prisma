generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Responsavel {
  id         Int        @id @default(autoincrement())
  nome       String
  email      String     @unique
  contato    String
  senhaHash  String
  criancas   Crianca[]
  criadoEm   DateTime   @default(now())
}

model Crianca {
  id             Int         @id @default(autoincrement())
  nome           String
  dataNascimento String      @db.VarChar(10)
  turmaId        Int?
  turma          Turma?      @relation(fields: [turmaId], references: [id])
  responsavelId  Int
  responsavel    Responsavel @relation(fields: [responsavelId], references: [id])
  criadoEm       DateTime    @default(now())
}

model Turma {
  id         Int      @id @default(autoincrement())
  nome       String
  criancas   Crianca[]
}

model Admin {
  id        Int      @id @default(autoincrement())
  usuario   String   @unique
  senhaHash String
  nome      String
  criadoEm  DateTime @default(now())
}